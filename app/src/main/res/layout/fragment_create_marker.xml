<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/info_background">

        <LinearLayout
            android:id="@+id/linearL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Name"
                android:textColor="@color/amaranth_purple" />

            <EditText
                android:id="@+id/markerName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_red"
                android:ems="10"
                android:hint="Enter here"
                android:inputType="textPersonName"
                android:paddingHorizontal="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Description"
                android:textColor="@color/amaranth_purple" />

            <EditText
                android:id="@+id/markerDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_red"
                android:gravity="top|start"
                android:hint="Enter here"
                android:inputType="textMultiLine|textCapSentences"
                android:lines="6"
                android:overScrollMode="always"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp"
                android:scrollbars="vertical"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Type"
                android:textColor="@color/amaranth_purple" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/church"
                    style="@android:style/Widget.Button"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/church_button" />

                <Button
                    android:id="@+id/prehistoricSite"
                    style="@android:style/Widget.Button"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="8dp"

                    android:background="@drawable/temple_button" />

                <Button
                    android:id="@+id/nature"
                    style="@android:style/Widget.Button"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearL"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/close"
                style="@android:style/Widget.Button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/background_blue"
                android:text="Close"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/save"
                style="@android:style/Widget.Button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:background="@drawable/background_blue"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

